from gpiozero import TrafficLights
signal_A = TrafficLights(24,25,26) 
signal_B = TrafficLights(21,22,23)
signal_A.red.on()  
signal_B.red.on()
while(True): #Repeated Looping
	Traffic_A.amber.on()
	sleep(10)
	Traffic_B.green.on()
	sleep(90)
	Traffic_A.amber.on()
	sleep(10)
	Traffic_A.red.on()  
	Traffic_B.amber.on() 
	sleep(10)
	Traffic_B.green.on()
	sleep(90)
	Traffic_B.amber.on()
	sleep(10)
	Traffic_B.red.on()
